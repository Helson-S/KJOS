; include file of mbr and loader
LOADER_BASE_ADDR equ 0x900
LOADER_START_SECTOR equ 0x2

; gdt, global descriptor table
DESC_G_4k equ 1_00000000000000000000000b
DESC_D_32 equ 1_0000000000000000000000b
DESC_L_ZERO equ 0_000000000000000000000b
DESC_AVL equ 0_00000000000000000000b

; DESC LIMIT2
DESC_LIMIT_CODE2 equ 1111_0000000000000000b
DESC_LIMIT_DATA2 equ 1111_0000000000000000b
DESC_LIMIT_VIDEO2 equ 0000_0000000000000000b
; DESC LIMIT2

DESC_P equ 1_000000000000000b
DESC_DPL_0 equ 00_0000000000000b
DESC_DPL_1 equ 01_0000000000000b
DESC_DPL_2 equ 10_0000000000000b
DESC_DPL_3 equ 11_0000000000000b

DESC_S_DATA equ 1_000000000000b
DESC_S_CODE equ 1_000000000000b
DESC_S_SYS equ 0_000000000000b
DESC_TYPE_CODE equ 1000_00000000b
DESC_TYPE_DATA equ 0010_00000000b

; HIGH4 of Descriptors
DESC_HIGH4_DATA equ (0x00 << 24) + DESC_G_4k + DESC_D_32 + DESC_L_ZERO \
+ DESC_AVL + DESC_LIMIT_DATA2 + DESC_P + DESC_DPL_0 + DESC_S_DATA \
+ DESC_TYPE_DATA + 0

DESC_HIGH4_CODE equ (0x00 << 24) + DESC_G_4k + DESC_D_32 + DESC_L_ZERO \
+ DESC_AVL + DESC_LIMIT_CODE2 + DESC_P + DESC_DPL_0 + DESC_S_CODE \
+ DESC_TYPE_CODE + 0

DESC_HIGH4_VIDEO equ (0x00 << 24) + DESC_G_4k + DESC_D_32 + DESC_L_ZERO \
+ DESC_AVL + DESC_LIMIT_VIDEO2 + DESC_P + DESC_DPL_0 + DESC_S_DATA \
+ DESC_TYPE_DATA + 0x0b


; Selector attributes
RPL0 equ 00b
RPL1 equ 01b
RPL2 equ 10b
RPL3 equ 11b
TI_GDT equ 000b
TI_LDT equ 100b